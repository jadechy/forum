{% extends "base.html.twig" %}

{% block body %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-500 text-white p-4 rounded">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="bg-red-500 text-white p-4 rounded">{{ message }}</div>
    {% endfor %}

            
    <div class="p-8 lg:w-1/2 mx-auto h-full flex items-center justify-center">
        <div class="bg-white rounded-lg p-8 relative w-full">
            <h1 class="text-center text-lg font-bold">Mot de passe perdu ?</h1>
            <p class="text-center text-sm font-medium opacity-70 mt-5">Vous recevez un email pour réinitialiser votre mot de passe</p>
            <form method="POST" class="mt-10" action="{{ path('app_forgot') }}">
                <div class="relative">
                    <input class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white" id="email" name="_email" type="email" placeholder="Adresse Email"/>
                </div>
                <div class="flex items-center justify-center mt-8">
                    <button class="relative flex w-full bg-blue-700 flex-row p-3 items-center justify-center rounded-lg overflow-hidden border cursor-pointer transition text-white hover:opacity-90 hover:scale-105" type="submit">
                        <svg class="h-5 w-5 fill-current mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>email-arrow-right</title><path d="M13 19C13 15.69 15.69 13 19 13C20.1 13 21.12 13.3 22 13.81V6C22 4.89 21.1 4 20 4H4C2.89 4 2 4.89 2 6V18C2 19.11 2.9 20 4 20H13.09C13.04 19.67 13 19.34 13 19M4 8V6L12 11L20 6V8L12 13L4 8M20 22V20H16V18H20V16L23 19L20 22Z" /></svg>
                        Recevoir l'email de réinitialisation
                    </button>
                </div>

                <div class="flex items-center justify-center mt-16">
                    <a class="text-blue-700 cursor-pointer transition hover:text-blue-700 hover:scale-105" href="{{ path('app_login')}}">
                        Vous vous souvenez de votre mot de passe ? Connectez-vous
                    </a>
                </div>
            </form>
        </div>
    </div>
         

{% endblock %}