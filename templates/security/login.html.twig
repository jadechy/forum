{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="p-8 lg:w-1/2 mx-auto h-full flex items-center justify-center">
        <div class="bg-white rounded-lg p-8 relative w-full">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connectés en tant que: {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="text-center text-lg font-bold">Se connecter</h1>

                <div class="relative">
                    <label for="username">Email</label>
                    <input class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="relative">
                    <label for="password">Password</label>
                    <input class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="flex items-center justify-center mt-8">
                    <button class="relative flex w-full bg-blue-700 flex-row p-3 items-center justify-center rounded-lg overflow-hidden border cursor-pointer transition text-white hover:opacity-90 hover:scale-105" type="submit">
                        Se connecter
                    </button>
                </div>

                <div class="flex items-center justify-center mt-16">
                    <a class="text-blue-700 cursor-pointer transition hover:text-blue-700 hover:scale-105" href="{{ path('app_forgot')}}">
                        Vous avez oubliez votre mot de passe ?
                    </a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
